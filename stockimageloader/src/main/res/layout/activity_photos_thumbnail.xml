    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <RelativeLayout
                android:id="@+id/rl_thumb"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:background="@color/panelGray"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_thumb_dir"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_corner_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/tv_thumb_pages"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_thumb_preview"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:padding="8dp"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>